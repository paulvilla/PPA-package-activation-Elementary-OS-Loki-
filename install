white='\033[1;37m'
NC='\033[0m'

echo -e "${white}Actualizando lista de repositorios...${NC}"
sudo apt-get update

echo -e "${white}Actualizando sistema...${NC}"
sudo apt-get upgrade

echo -e "${white}Instalando dependencias necesarias...${NC}"
sudo apt-get install python-software-properties

echo -e "${white}Activando paquetes PPA...${NC}"
sudo apt-get install software-properties-common
